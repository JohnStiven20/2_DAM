<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence  https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd" version="3.0">
    <persistence-unit name="default">
        <class>org.example.modelo.Cliente</class>
        <class>org.example.modelo.Pedido</class>
        <class>org.example.modelo.LineaPedido</class>
        <class>org.example.modelo.Ingrediente</class>
        <class>org.example.modelo.Producto</class>
        <class>org.example.modelo.Alergeno</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pizzeria2"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="admin"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />
        </properties>

    </persistence-unit>
</persistence> 

